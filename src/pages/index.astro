---
import BaseLayout from '../layouts/BaseLayout.astro';
import { states, getCriticalFatalityStates, getStrongCrosswalkStates } from '../data/states';

const title = "Pedestrian Accident Lawyers - Free Case Review";
const description = "Hit by a car while walking? Get a free case evaluation from experienced pedestrian accident attorneys. No fees unless you win. Available 24/7 nationwide.";

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Pedestrian Accident Lawyer",
  "url": "https://pedestrianaccidentlawyer.net",
  "description": description,
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://pedestrianaccidentlawyer.net/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How much does it cost to hire a pedestrian accident lawyer?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Nothing upfront. Our attorneys work on contingency, meaning they only get paid if you win. The initial consultation is always free."
      }
    },
    {
      "@type": "Question",
      "name": "What if I was jaywalking when I was hit?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "You may still be able to recover compensation. Drivers have a duty of care to watch for pedestrians at all times. Most states use comparative fault, meaning you can still recover damages minus your percentage of fault."
      }
    },
    {
      "@type": "Question",
      "name": "How long do I have to file a pedestrian accident claim?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "This varies by state‚Äîfrom 1 year (Kentucky, Louisiana, Tennessee) to 6 years (Maine, Minnesota, North Dakota). Check your state's page for specific deadlines and don't delay."
      }
    },
    {
      "@type": "Question",
      "name": "What compensation can I receive for a pedestrian accident?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "You may be entitled to medical expenses, lost wages, pain and suffering, permanent disability compensation, and in wrongful death cases, funeral expenses and loss of companionship."
      }
    },
    {
      "@type": "Question",
      "name": "What if the driver who hit me drove off (hit-and-run)?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Even if the driver is never found, you may still have options. Your own uninsured motorist coverage (if you have auto insurance) may cover your injuries. An attorney can help identify all potential sources of compensation."
      }
    }
  ]
};

const schemaMarkup = [websiteSchema, faqSchema];

// Featured states (highest pedestrian fatalities)
const featuredStates = states.filter(s => 
  ["california", "texas", "florida", "new-york", "arizona", "georgia"].includes(s.slug)
);

const criticalStates = getCriticalFatalityStates();
const strongCrosswalkStates = getStrongCrosswalkStates();
