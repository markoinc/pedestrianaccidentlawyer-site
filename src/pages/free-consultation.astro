---
import BaseLayout from '../layouts/BaseLayout.astro';
import { states } from '../data/states';

const title = "Free Consultation - Pedestrian Accident Lawyer";
const description = "Get a free pedestrian accident case evaluation. No fees unless you win. Experienced attorneys available 24/7 nationwide.";
---

<BaseLayout title={title} description={description}>
  <section class="bg-gradient-to-br from-gray-900 to-gray-800 text-white py-16">
    <div class="container-wide text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Free Case Evaluation</h1>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Find out what your pedestrian accident case is worth. No fees unless you win.
      </p>
    </div>
  </section>

  <section class="py-12">
    <div class="container-wide">
      <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-2xl shadow-xl p-8">
          <form action="https://services.leadconnectorhq.com/hooks/OsNgWuy8oZzLbp5BXbnD/webhook-trigger/mva-site-lead" method="POST" class="space-y-6">
            <input type="hidden" name="source" value="pedestrianaccidentlawyer-free-consultation" />
            
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">First Name *</label>
                <input type="text" name="firstName" class="w-full px-4 py-3 border border-gray-300 rounded-lg" required />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Last Name *</label>
                <input type="text" name="lastName" class="w-full px-4 py-3 border border-gray-300 rounded-lg" required />
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Phone Number *</label>
              <input type="tel" name="phone" class="w-full px-4 py-3 border border-gray-300 rounded-lg" required />
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
              <input type="email" name="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg" required />
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">State Where Accident Occurred *</label>
              <select name="state" class="w-full px-4 py-3 border border-gray-300 rounded-lg" required>
                <option value="">Select State</option>
                {states.map(state => <option value={state.slug}>{state.name}</option>)}
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">When Did the Accident Occur?</label>
              <select name="accidentTime" class="w-full px-4 py-3 border border-gray-300 rounded-lg">
                <option value="">Select timeframe</option>
                <option value="within-week">Within the last week</option>
                <option value="within-month">Within the last month</option>
                <option value="within-6months">Within the last 6 months</option>
                <option value="within-year">Within the last year</option>
                <option value="over-year">Over a year ago</option>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Describe Your Accident</label>
              <textarea name="description" rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg resize-none" placeholder="What happened? Where were you? What injuries did you sustain?"></textarea>
            </div>
            
            <div class="flex items-start gap-2">
              <input type="checkbox" id="consent" name="consent" required class="mt-1" />
              <label for="consent" class="text-xs text-gray-600">
                I consent to receive calls and text messages (SMS) regarding my case. Message frequency varies. Msg & data rates may apply. Reply STOP to opt out. 
                <a href="/privacy/" class="underline">Privacy Policy</a>
              </label>
            </div>
            
            <button type="submit" class="w-full btn btn-cta text-xl py-5">
              Get My Free Evaluation â†’
            </button>
            
            <p class="text-center text-sm text-gray-500">
              ðŸ”’ Your information is secure and confidential.
            </p>
          </form>
        </div>

        <div class="mt-8 text-center">
          <p class="text-gray-600 mb-4">Prefer to talk to someone?</p>
          
          <p class="text-gray-500 mt-2">Available 24 hours a day, 7 days a week</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
