---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { states, type StateData } from '../../data/states';

export function getStaticPaths() {
  return states.map((state) => ({
    params: { state: state.slug },
    props: { stateData: state },
  }));
}

interface Props {
  stateData: StateData;
}

const { stateData } = Astro.props;

const fullTitle = `${stateData.name} Pedestrian Accident Lawyer`;
const title = fullTitle.length > 60 ? fullTitle.substring(0, 57) + '...' : fullTitle;
const description = `Hit by a car in ${stateData.name}? Get a free case evaluation. ${stateData.crosswalkLaw === "strong" ? "Strong crosswalk protections." : "Know your rights."} ${stateData.statuteOfLimitations} to file.`;

const schemaMarkup = {
  "@context": "https://schema.org",
  "@type": "LegalService",
  "name": `${stateData.name} Pedestrian Accident Lawyers`,
  "description": description,
  "url": `https://pedestrianaccidentlawyer.net/states/${stateData.slug}`,
  "areaServed": { "@type": "State", "name": stateData.name },
  "serviceType": ["Pedestrian Accident Law", "Personal Injury Law"],
  "priceRange": "Free Consultation"
};

const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "States", url: "/states" },
  { name: stateData.name, url: `/states/${stateData.slug}` }
];

const stateIndex = states.findIndex(s => s.slug === stateData.slug);
const relatedStates = [
  states[(stateIndex - 1 + states.length) % states.length],
  states[(stateIndex + 1) % states.length],
  states[(stateIndex + 2) % states.length],
].filter(s => s.slug !== stateData.slug);
---

<BaseLayout title={title} description={description} schemaMarkup={schemaMarkup} breadcrumbs={breadcrumbs}>
  <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white py-16 md:py-24">
    <div class="container-wide">
      <div class="max-w-4xl">
        <div class="flex items-center gap-2 text-gray-400 mb-4">
          <a href="/" class="hover:text-white transition">Home</a>
          <span>/</span>
          <a href="/states" class="hover:text-white transition">States</a>
          <span>/</span>
          <span class="text-white">{stateData.name}</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-6">
          {stateData.name} Pedestrian Accident Lawyer
        </h1>
        
        <p class="text-xl md:text-2xl text-gray-300 mb-8 leading-relaxed">
          Hit by a car while walking in {stateData.name}? Get a free, no-obligation case evaluation from experienced attorneys who fight for pedestrian rights.
        </p>
        
        <div class="flex flex-wrap gap-4 mb-8">
          <div class="bg-white/10 rounded-lg px-4 py-2">
            <span class="text-gray-400 text-sm">Crosswalk Law:</span>
            <span class="font-semibold ml-1">
              {stateData.crosswalkLaw === "strong" ? "ðŸš¶ Strong Protection" : 
               stateData.crosswalkLaw === "moderate" ? "Moderate" : "Basic"}
            </span>
          </div>
          <div class="bg-white/10 rounded-lg px-4 py-2">
            <span class="text-gray-400 text-sm">Filing Deadline:</span>
            <span class="font-semibold ml-1">{stateData.statuteOfLimitations}</span>
          </div>
          <div class="bg-white/10 rounded-lg px-4 py-2">
            <span class="text-gray-400 text-sm">Fatality Rate:</span>
            <span class="font-semibold ml-1">{stateData.pedestrianDeathRate}</span>
          </div>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#free-case-review" class="btn btn-cta text-lg px-8 py-4">Get Your Free Case Review</a>
          </div>
      </div>
    </div>
  </section>

  <section class="bg-white border-b border-gray-200 py-6">
    <div class="container-wide">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        <div>
          <div class="text-2xl md:text-3xl font-bold text-primary-600">{stateData.statuteOfLimitations}</div>
          <div class="text-sm text-gray-600">Statute of Limitations</div>
        </div>
        <div>
          <div class="text-2xl md:text-3xl font-bold text-primary-600">{stateData.annualPedestrianFatalities}</div>
          <div class="text-sm text-gray-600">Annual Fatalities</div>
        </div>
        <div>
          <div class="text-2xl md:text-3xl font-bold text-primary-600">{stateData.pedestrianDeathRate}</div>
          <div class="text-sm text-gray-600">Death Rate</div>
        </div>
        <div>
          <div class="text-2xl md:text-3xl font-bold text-green-600">$0</div>
          <div class="text-sm text-gray-600">Upfront Cost</div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12 md:py-16">
    <div class="container-wide">
      <div class="grid lg:grid-cols-3 gap-8 lg:gap-12">
        <div class="lg:col-span-2">
          <div class="bg-white rounded-xl shadow-md p-6 md:p-8 mb-8">
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">{stateData.name} Crosswalk Laws</h2>
            
            <div class={`p-4 rounded-lg mb-6 ${
              stateData.crosswalkLaw === "strong" ? "bg-green-50 border-l-4 border-green-500" :
              stateData.crosswalkLaw === "moderate" ? "bg-blue-50 border-l-4 border-blue-500" :
              "bg-gray-50 border-l-4 border-gray-500"
            }`}>
              <div class="font-bold text-lg mb-2">
                {stateData.crosswalkLaw === "strong" ? "ðŸš¶ Strong Pedestrian Protections" :
                 stateData.crosswalkLaw === "moderate" ? "Moderate Pedestrian Protections" :
                 "Basic Pedestrian Protections"}
              </div>
              <p class="text-gray-700">{stateData.crosswalkLawDetails}</p>
            </div>

            <h3 class="text-xl font-semibold text-gray-900 mt-6 mb-3">Right-of-Way Rules</h3>
            <p class="text-gray-600">{stateData.rightOfWay}</p>
          </div>

          <div class="bg-white rounded-xl shadow-md p-6 md:p-8 mb-8">
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">{stateData.name} Pedestrian Accident Laws</h2>
            
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              Statute of Limitations: {stateData.statuteOfLimitations}
            </h3>
            <p class="text-gray-600 mb-6">
              In {stateData.name}, you have <strong>{stateData.statuteOfLimitations}</strong> from the date of your pedestrian accident to file a lawsuit.
              {stateData.statuteOfLimitations === "1 year" && " This is one of the shortest deadlinesâ€”act immediately!"}
            </p>
            
            <h3 class="text-xl font-semibold text-gray-900 mt-6 mb-3">
              Fault System: {stateData.faultSystem}
            </h3>
            <p class="text-gray-600 mb-6">
              {stateData.faultSystem.includes("Contributory negligence") ?
                `${stateData.name} follows pure contributory negligence. If you're found even 1% at fault, you may recover nothing. You need an experienced attorney.` :
                stateData.faultSystem.includes("Pure comparative") ?
                `${stateData.name} uses pure comparative fault. You can recover damages even if partially at fault, reduced by your percentage of fault.` :
                `${stateData.name} uses modified comparative fault. You can recover if you're less than ${stateData.faultSystem.includes("50%") ? "50%" : "51%"} at fault.`
              }
            </p>

            <h3 class="text-xl font-semibold text-gray-900 mt-6 mb-3">Minimum Insurance</h3>
            <p class="text-gray-600">{stateData.name} requires minimum coverage of {stateData.minInsurance}. These minimums often aren't enough for serious pedestrian injuries.</p>
          </div>

          <div class="bg-white rounded-xl shadow-md p-6 md:p-8 mb-8">
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">Dangerous Areas in {stateData.name}</h2>
            
            <div class="grid md:grid-cols-2 gap-4 mb-6">
              {stateData.dangerousAreas.map(area => (
                <div class="flex items-center gap-3 p-4 bg-red-50 rounded-lg">
                  <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                  </div>
                  <span class="font-medium text-gray-900">{area}</span>
                </div>
              ))}
            </div>
            
            {stateData.uniqueFacts.length > 0 && (
              <>
                <h3 class="text-xl font-semibold text-gray-900 mt-6 mb-3">What Makes {stateData.name} Unique</h3>
                <ul class="space-y-2">
                  {stateData.uniqueFacts.map(fact => (
                    <li class="flex items-start gap-2">
                      <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span class="text-gray-700">{fact}</span>
                    </li>
                  ))}
                </ul>
              </>
            )}
          </div>

          <div class="bg-white rounded-xl shadow-md p-6 md:p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Cities We Serve in {stateData.name}</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
              {stateData.majorCities.map(city => (
                <div class="bg-gray-50 rounded-lg p-4 text-center">
                  <div class="font-semibold text-gray-900">{city}</div>
                  <div class="text-sm text-gray-500">{stateData.abbreviation}</div>
                </div>
              ))}
            </div>
          </div>
        </div>

        <div class="lg:col-span-1">
          <div id="free-case-review" class="bg-gradient-to-br from-primary-600 to-primary-700 rounded-xl shadow-lg p-6 md:p-8 sticky top-24">
            <div class="text-center mb-6">
              <div class="inline-flex items-center justify-center w-16 h-16 bg-white/20 rounded-full mb-4">
                <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="5" r="2" />
                  <path d="M12 7v5M9 20l3-8 3 8M9 14h6" />
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-white mb-2">Free Case Review</h3>
              <p class="text-primary-100">Find out what your {stateData.name} pedestrian accident case is worth.</p>
            </div>
            
            <form class="space-y-4" action="https://services.leadconnectorhq.com/hooks/OsNgWuy8oZzLbp5BXbnD/webhook-trigger/mva-site-lead" method="POST">
              <input type="hidden" name="source" value={`pedestrianaccidentlawyer-${stateData.slug}`} />
              <input type="hidden" name="state" value={stateData.slug} />
              <input type="text" name="fullName" placeholder="Full Name" class="w-full px-4 py-3 rounded-lg bg-white/95 text-gray-900" required />
              <input type="tel" name="phone" placeholder="Phone Number" class="w-full px-4 py-3 rounded-lg bg-white/95 text-gray-900" required />
              <input type="email" name="email" placeholder="Email Address" class="w-full px-4 py-3 rounded-lg bg-white/95 text-gray-900" required />
              <select name="accidentTime" class="w-full px-4 py-3 rounded-lg bg-white/95 text-gray-900" required>
                <option value="">When did the accident occur?</option>
                <option value="within-week">Within the last week</option>
                <option value="within-month">Within the last month</option>
                <option value="within-6months">Within the last 6 months</option>
                <option value="within-year">Within the last year</option>
                <option value="over-year">Over a year ago</option>
              </select>
              <textarea name="description" placeholder="Briefly describe your accident..." rows="3" class="w-full px-4 py-3 rounded-lg bg-white/95 text-gray-900 resize-none"></textarea>
              <button type="submit" class="w-full bg-gray-900 hover:bg-gray-800 text-white font-bold py-4 px-6 rounded-lg transition text-lg">
                Get My Free Evaluation
              </button>
            </form>
            
            <div class="mt-6 text-center">
              <p class="text-primary-100 text-sm">ðŸ”’ Your information is confidential.</p>
              </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12 md:py-16">
    <div class="container-wide">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Pedestrian Accident Lawyers in Nearby States</h2>
      <div class="grid md:grid-cols-3 gap-4">
        {relatedStates.map(related => (
          <a href={`/states/${related.slug}`} class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition group">
            <div class="font-bold text-gray-900 group-hover:text-primary-600 transition">{related.name} Pedestrian Accident Lawyers</div>
            <div class="text-sm text-gray-500 mt-1">{related.crosswalkLaw === "strong" ? "ðŸš¶ Strong Laws" : "Pedestrian Protection"} â€¢ {related.statuteOfLimitations} SOL</div>
          </a>
        ))}
      </div>
      <div class="text-center mt-8">
        <a href="/states" class="text-primary-600 hover:text-primary-700 font-semibold">View All 50 States â†’</a>
      </div>
    </div>
  </section>

  <section class="bg-gray-900 text-white py-12 md:py-16">
    <div class="container-wide text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Hit by a Car in {stateData.name}?</h2>
      <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
        Don't let insurance companies undervalue your injuries. Get experienced legal help todayâ€”it's free.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="#free-case-review" class="btn btn-cta text-lg px-8 py-4">Start Your Free Case Review</a>
        
      </div>
    </div>
  </section>
</BaseLayout>
