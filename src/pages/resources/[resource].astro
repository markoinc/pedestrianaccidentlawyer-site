---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { resources, type ResourceData } from '../../data/resources';

export function getStaticPaths() {
  return resources.map((resource) => ({
    params: { resource: resource.slug },
    props: { resource },
  }));
}

interface Props {
  resource: ResourceData;
}

const { resource } = Astro.props;

// Title already includes site name, just truncate to 60 chars for SEO
const fullTitle = `${resource.title} | Pedestrian Accident Lawyer`;
const title = fullTitle.length > 60 ? fullTitle.substring(0, 57) + '...' : fullTitle;
const description = resource.description;
---

<BaseLayout title={title} description={description}>
  <section class="bg-gradient-to-br from-gray-900 to-gray-800 text-white py-16">
    <div class="container-wide">
      <div class="flex items-center gap-2 text-gray-400 mb-4">
        <a href="/" class="hover:text-white">Home</a>
        <span>/</span>
        <a href="/resources" class="hover:text-white">Resources</a>
        <span>/</span>
        <span class="text-white">{resource.title}</span>
      </div>
      <div class="text-6xl mb-4">{resource.icon}</div>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{resource.title}</h1>
      <p class="text-xl text-gray-300 max-w-3xl">{resource.description}</p>
    </div>
  </section>

  <section class="py-12">
    <div class="container-wide">
      <div class="grid lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
          <div class="bg-white rounded-xl shadow-md p-8">
            <div class="prose prose-lg max-w-none" set:html={resource.content.replace(/\n/g, '<br/>').replace(/## /g, '<h2 class="text-2xl font-bold text-gray-900 mt-8 mb-4">').replace(/### /g, '<h3 class="text-xl font-semibold text-gray-900 mt-6 mb-3">')} />
          </div>

          <div class="bg-primary-50 rounded-xl p-8 mt-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Key Takeaways</h2>
            <ul class="space-y-3">
              {resource.keyTakeaways.map(takeaway => (
                <li class="flex items-start gap-2">
                  <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-700">{takeaway}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <div class="lg:col-span-1">
          <div class="bg-gradient-to-br from-primary-600 to-primary-700 rounded-xl shadow-lg p-8 sticky top-24">
            <h3 class="text-xl font-bold text-white mb-4">Need Legal Help?</h3>
            <p class="text-primary-100 mb-6">Get a free case evaluation from an experienced pedestrian accident attorney.</p>
            <form action="https://services.leadconnectorhq.com/hooks/OsNgWuy8oZzLbp5BXbnD/webhook-trigger/mva-site-lead" method="POST" class="space-y-4">
              <input type="hidden" name="source" value={`pedestrianaccidentlawyer-resource-${resource.slug}`} />
              <input type="text" name="fullName" placeholder="Full Name" class="w-full px-4 py-3 rounded-lg bg-white/95 text-gray-900" required />
              <input type="tel" name="phone" placeholder="Phone Number" class="w-full px-4 py-3 rounded-lg bg-white/95 text-gray-900" required />
              <input type="email" name="email" placeholder="Email" class="w-full px-4 py-3 rounded-lg bg-white/95 text-gray-900" required />
              <button type="submit" class="w-full bg-gray-900 hover:bg-gray-800 text-white font-bold py-4 px-6 rounded-lg transition">
                Get My Free Evaluation
              </button>
            </form>
            <p class="text-primary-100 text-sm text-center mt-4">No fees unless you win</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
