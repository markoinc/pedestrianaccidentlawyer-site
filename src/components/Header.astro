---
const navLinks = [
  { href: '/free-consultation', label: 'Free Consultation' },
  { href: '/states', label: 'Find by State' },
  { href: '/case-types', label: 'Case Types' },
  { href: '/resources', label: 'Resources' },
  { href: '/about', label: 'About Us' },
];
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <div class="container-wide">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <div class="w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="5" r="2" />
            <path d="M12 7v5M9 20l3-8 3 8M9 14h6" />
          </svg>
        </div>
        <span class="font-bold text-xl text-gray-900">Pedestrian Accident Lawyer</span>
      </a>
      
      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-8">
        {navLinks.map(link => (
          <a href={link.href} class="text-gray-600 hover:text-primary-600 font-medium transition">
            {link.label}
          </a>
        ))}
      </nav>
      
      <!-- CTA Button -->
      <div class="flex items-center gap-4">
        <a href="#free-case-review" class="btn btn-primary hidden sm:inline-flex">
          Get Free Review
        </a>
        
        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="lg:hidden p-2" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden lg:hidden border-t border-gray-200 bg-white">
    <nav class="container-wide py-4 space-y-2">
      {navLinks.map(link => (
        <a href={link.href} class="block py-2 text-gray-600 hover:text-primary-600 font-medium">
          {link.label}
        </a>
      ))}
      <a href="#free-case-review" class="block btn btn-primary text-center mt-4">
        Get Free Case Review
      </a>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
